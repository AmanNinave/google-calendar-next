{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off", // Disable unused variable checks
    "@typescript-eslint/no-explicit-any": "off", // Allow the use of `any`
    "prefer-const": "off", // Allow using `let` without requiring `const`
    "react/jsx-key": "warn" // Warn instead of error for missing keys in React lists
  }
}